@model List<Book>
@{
    ViewData["Title"] = "Books Page";
}

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary rounded-0">
                <i class="bi bi-plus-circle"></i> Add New Book
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published Date</th>
                <th>Genre</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublishedDate</td>
                    <td>@book.Category.Name</td>
                    <td>@book.Price.ToString("0.00")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary rounded-0">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger rounded-0">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>