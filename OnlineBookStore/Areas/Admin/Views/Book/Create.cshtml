@using OnlineBookStore.Data.ViewModel
@model BookCreateViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add New Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="book.Title" class="form-control border-0 shadow" />
                    <label asp-for="book.Title" class="ms-2"></label>
                    <span asp-validation-for="book.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="book.Author" class="form-control border-0 shadow" />
                    <label asp-for="book.Author" class="ms-2"></label>
                    <span asp-validation-for="book.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="book.Description" class="form-control border-0 shadow"></textarea>
                    <label asp-for="book.Description" class="ms-2"></label>
                    <span asp-validation-for="book.Description" class="text-danger"></span>
                </div>
                  <div class="form-floating py-2 col-12">
                     <select asp-for="book.Genre" class="form-control border-0 shadow">
                         <option value="" selected>Select a Genre</option>
                         @foreach (var category in Model.categories)
                         {
                             <option value="@category.Id">@category.Name</option>
                         }
                     </select>
                     <label asp-for="book.Genre" class="ms-2"></label>
                     <span asp-validation-for="book.Genre" class="text-danger"></span>
                 </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="book.PublishedDate" type="date" class="form-control border-0 shadow" value="@DateTime.UtcNow.ToString("yyyy-mm-dd")" />
                    <label asp-for="book.PublishedDate" class="ms-2"></label>
                    <span asp-validation-for="book.PublishedDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="book.Price" type="number" class="form-control border-0 shadow" />
                    <label asp-for="book.Price" class="ms-2"></label>
                    <span asp-validation-for="book.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="book.Stock" type="number" class="form-control border-0 shadow" />
                    <label asp-for="book.Stock" class="ms-2"></label>
                    <span asp-validation-for="book.Stock" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control rounded-0">Add</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Book" asp-area="Admin" asp-action="Index" class="btn btn-outline-primary border form-control rounded-0">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}